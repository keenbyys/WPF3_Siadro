<Window x:Class="WpfApp_LW3_DB.AddMenuCultures"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_LW3_DB"
        mc:Ignorable="d"
        Title="AddMenuCultures" Height="450" Width="350">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Margin="0, 10, 0, 0">Farm Cultures</TextBlock>
            <TextBox x:Name="CulturesNameTextBox"/>

            <TextBlock Margin="0, 10, 0, 0">Avg. yield</TextBlock>
            <TextBox x:Name="AvgYieldTextBox"/>

            <TextBlock Margin="0, 10, 0, 0">Price first class product</TextBlock>
            <TextBox x:Name="PriceFirstClassProductTextBox"/>

            <TextBlock Margin="0, 10, 0, 0">Price second class product</TextBlock>
            <TextBox x:Name="PriceSecondClassProductTextBox"/>

            <TextBlock Margin="0, 10, 0, 0">Price premium product</TextBlock>
            <TextBox x:Name="PricePremiumProductTextBox"/>

            <TextBlock Margin="0, 10, 0, 0">Total of area</TextBlock>
            <TextBox x:Name="TotalAreaTextBox"/>

            <StackPanel Orientation="Horizontal" Margin="50, 0, 0, 0">
                <Button x:Name="OkButton" Content="OK" Width="100" Margin="10, 20, 0, 0"/>
                <Button x:Name="CanceleButton" Content="Cancele" Width="100" Margin="10, 20, 0, 0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
