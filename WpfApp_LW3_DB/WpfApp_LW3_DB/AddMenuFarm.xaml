<Window x:Class="WpfApp_LW3_DB.AddMenuFarm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_LW3_DB"
        mc:Ignorable="d"
        Title="AddMenuFarm" Height="450" Width="350">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Margin="0, 10, 0, 0">Farm Name</TextBlock>
            <TextBox x:Name="FarmNameTextBox"/>

            <TextBlock Margin="0, 10, 0, 0">Region</TextBlock>
            <TextBox x:Name="RegionTextBox"/>

            <TextBlock Margin="0, 10, 0, 0">Number of phone</TextBlock>
            <TextBox x:Name="NumPhoneTextBox"/>

            <TextBlock Margin="0, 10, 0, 0">Manager of farm</TextBlock>
            <TextBox x:Name="ManagerFarmTextBox"/>

            <TextBlock Margin="0, 10, 0, 0">Sown of area</TextBlock>
            <TextBox x:Name="SownTextBox"/>

            <TextBlock Margin="0, 10, 0, 0">Total of area</TextBlock>
            <TextBox x:Name="TotalAreaTextBox"/>

            <StackPanel Orientation="Horizontal" Margin="50, 0, 0, 0">
                <Button x:Name="OkButton" Content="OK" Width="100" Margin="10, 20, 0, 0" Click="OkButton_Click"/>
                <Button x:Name="CanceleButton" Content="Cancele" Width="100" Margin="10, 20, 0, 0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
